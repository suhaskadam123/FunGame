@model DataAccessLayer.Models.User

@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Edit  Distributer";
}

<div class="page-content">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-header">
                    <h6>Credit Transfer (Super Distributer)</h6>
                </div>
                <div class="card-body">
                    <form asp-controller="SuperAdmin" asp-action="WithdrawCreditFromRetailer" method="post">
                        <input type="hidden" name="TargetUserId" value="@Model.UserId" />

                        <div class="form-group d-flex">
                            <div class="col-sm-3 offset-lg-3">
                                <h4 class="breadcrumb bg-light">User: @Model.Username</h4>
                                <h4 class="breadcrumb bg-light">Individual Credit: @Model.Balance</h4>
                            </div>
                        </div>


                        <div class="form-group d-flex">
                            <label class="col-sm-2 offset-lg-1 text-right control-label mt-2">Amount to Transfer</label>
                            <div class="col-sm-6">
                                <input type="number" class="form-control" name="Amount" required />
                            </div>
                        </div>

                        <div class="form-group d-flex">
                            <label class="col-sm-2 offset-lg-1 text-right control-label mt-2">Password</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" name="Password" placeholder="Enter Superadmin Password" required />
                            </div>
                        </div>

                        <div class="form-group d-flex">
                            <label class="col-sm-2 offset-lg-1"></label>
                            <div class="col-sm-6 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Credit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
